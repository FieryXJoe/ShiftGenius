@model List<ManagerAvailRequestModel>

@{
    ViewData["Title"] = "Manager Availability Requests";
}
<div>
    <h1>Manager Availability Requests</h1>
    <h2>@Model.Count new availability requests</h2>

    <div class="row">
        @foreach (var request in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Employee ID: @request.EmployeeID</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Employee Name: @request.EmployeeName</h6>
                        <a href="#" class="btn btn-primary">View</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div>
        <a href="@Url.Action("Index", "Manager")" class="btn btn-secondary">Back</a>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</div>
