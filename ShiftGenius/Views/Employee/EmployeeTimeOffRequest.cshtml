@model EmployeeTimeOffRequestModel

<div class="employee-time-off-container">
    <h2>Request Time Off</h2>
    <div class="form-container">
        <form method="post">
            <div class="form-group">
                <label for="startDate">Start Date:</label>
                <input type="date" class="form-control" id="startDate" name="StartDate" asp-for="StartDate">
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="endDate">End Date:</label>
                <input type="date" class="form-control" id="endDate" name="EndDate" asp-for="EndDate">
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="type">Type:</label>
                <select class="form-control" id="type" name="Type" asp-for="Type">
                    <option value="Unpaid">Unpaid Time Off</option>
                    <option value="Paid">Paid Time Off</option>
                    <option value="Bereavement">Bereavement</option>
                    <option value="Other">Other (Specify with Manager)</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit Request</button>
            <a href="/employee/index" class="btn btn-secondary">Back</a>
        </form>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
</div>
