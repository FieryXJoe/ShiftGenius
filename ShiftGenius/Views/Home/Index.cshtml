@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="jumbotron">
        <h1 class="display-4">@User.Identity.Name!</h1>
        <p class="lead">Welcome to ShiftGenius your work scheduling hub.</p>
        <hr class="my-4">
        <p>Get started by checking your schedule.</p>
    </div>
}
else
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to ShiftGenius!</h1>
        <p class="lead">Please Login or Register.</p>
    </div>
}
